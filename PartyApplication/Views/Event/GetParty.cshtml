@model PartyApplication.Model.Event

@{
    ViewData["Title"] = "GetParty";
}

<h1>GetParty</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zipcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zipcode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HostUsername)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(Model.HostUsername, "GetAccount", "Account", new { id = Model.HostUsername }, null)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.Name.Equals(Model.HostUsername))
    {
        <div>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
        </div>
        <div>
            @Html.ActionLink("Delete", "DeleteParty", "Event", new { id = Model.Id }, null)
        </div>
    }
    <div>
        <form method="POST" action="events/rate">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="checkbox" name="star" value=1> 1 Star
            <input type="checkbox" name="star" value=2> 2 Star
            <input type="checkbox" name="star" value=3> 3 Star
            <input type="checkbox" name="star" value=4> 4 Star
            <input type="checkbox" name="star" value=5> 5 Star
            <button type="Submit">Submit</button>

        </form>
    </div>

    @Html.ActionLink("Back to list", "Events", "Event")
</div>
