@model PartyApplication.Model.Event

@{
    ViewData["Title"] = "GetParty";
}
<head>
    <meta charset="utf-8">
    <title>SocialSquare</title>
    <link href="~/css/getParty.css" rel="stylesheet" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
</head>
<h1 class="center">Event Details</h1>

<div class="center">
    <hr />
    <dl class="main">
        <dt class="name">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="item">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="name">
            @Html.DisplayNameFor(model => model.Zipcode)
        </dt>
        <dd class="item">
            @Html.DisplayFor(model => model.Zipcode)
        </dd>
        <dt class="name">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="item">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="name">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="item">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="name">
            @Html.DisplayNameFor(model => model.HostUsername)
        </dt>
        <dd class="item">
            @Html.ActionLink(Model.HostUsername, "GetAccount", "Account", new { id = Model.HostUsername }, null)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<div class="center">
    @if (User.Identity.Name.Equals(Model.HostUsername))
    {
        
        <div class=" button">
            @Html.ActionLink("Delete", "DeleteParty", "Event", new { id = Model.Id }, null)
        </div>
    }

    @if (!Context.User.Identity.Name.Equals(Model.HostUsername))
      {
        <div>
            <form method="POST" action="/events/rate">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="checkbox" name="star" value=1> 1 Star
                <input type="checkbox" name="star" value=2> 2 Star
                <input type="checkbox" name="star" value=3> 3 Star
                <input type="checkbox" name="star" value=4> 4 Star
                <input type="checkbox" name="star" value=5> 5 Star
                <button type="Submit">Submit</button>

            </form>
        </div>
      }
    
    <div class="button">
        @Html.ActionLink("Back to list.", "events", "Event")

    </div>

</div>
