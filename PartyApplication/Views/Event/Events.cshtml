@{
    ViewData["Title"] = "GetParties";
}

@model IEnumerable<PartyApplication.Model.Event>


<head>
    <link href="~/css/formStyles.css" rel="stylesheet" type="text/css">
</head>

<h1 class="heading">Discover an Event!!</h1>

<div class="form">
    <form method="post" action="parties">

        <li class="form-row">
            <label for="zipcode">Search By Zipcode:</label><br />
            <input type="text" id="zipcode" name="zipcode" /><br />
        </li>
        <li class="form-row">
            <button type="Submit">Submit</button>
        </li>
    </form>
</div>
<div class="menuButton">
    @Html.ActionLink("Make A New Event!", "CreateEvent", "Event")
</div>

<p>
    <a href="/parties/createevent/">Host an Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th class="name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="zip">
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th class="location">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th class="time">
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@foreach (var item in Model)
{
    <div class="container">
        <table class="table">
            <tbody>


                <tr>
                    <td class="name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="zip">
                        @Html.DisplayFor(modelItem => item.Zipcode)
                    </td>
                    <td class="location">
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td class="time">
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td class="options">
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        <a href="@item.Id">Details</a>|
                        <a href="delete/@item.Id">Delete</a>
                    </td>
                </tr>


            </tbody>
        </table>
    </div>
}
